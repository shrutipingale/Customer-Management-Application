<%- include("_header") -%>

    <h1>Are you sure you want to delete this Customer?</h1>

    <form action="/delete/<%= model.cusid %>" method="post">
        <div class="form-horizontal">

            <%- include("_display") -%>

                <div class="form-group row">
                    <label class="col-form-label col-sm-2"></label>
                    <div class="col-sm-10">
                        <input type="submit" value="Delete Customer" class="btn btn-default btn-danger" />
                    </div>
                </div>
        </div>
    </form>

    <% if(type==="POST" ) { %>
        <% if (remove===1) {%>
            <h3>Customer Successfully Deleted!</h3>
            <% } else { %>
                <h3>Error!</h3>
                <p>
                    <%= remove %>
                </p>
            <%} %>
    <% } %>


 <%- include("_footer") -%>